{
  "manifest_version": 3,
  "name": "inspiration",
  "author": "Qunhao",
  "description": "a Momentum-like extension with quotes from Chinese top entrepreneurs",
  "version": "0.2",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": ["https://picsum.photos/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
